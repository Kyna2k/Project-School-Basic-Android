<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home_activity"
    android:weightSum="10"
    android:background="@drawable/background_gradient">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/txt_quanlysinhvien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUẢN LÝ SINH VIÊN"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:id="@+id/userten"
            android:layout_below="@+id/txt_quanlysinhvien"
            android:layout_alignParentEnd="true"
            android:src="@drawable/avatar_admin" />

        <TextView
            android:id="@+id/txt_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="Name: Phan Thanh Huy"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_home_quyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permission : Admin"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/txt_home_name"
            android:layout_marginStart="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_background"
        android:gravity="center"
        android:layout_weight="7">

        <ImageView
            android:id="@+id/images_danhsachlop"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/background_icon"
            android:padding="20dp"
            android:src="@drawable/icon_danhsachlop" />
        <TextView
            android:id="@+id/text_danhsachlop"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/images_danhsachlop"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/background_text"
            android:padding="20dp"
            android:text="DANH SÁCH LỚP"
            android:textAlignment="center"
            android:textColor="@color/white" />
<!---->
        <ImageView
            android:id="@+id/images_danhsachsinhvien"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_toEndOf="@+id/images_danhsachlop"
            android:background="@drawable/background_icon"
            android:padding="20dp"
            android:src="@drawable/icon_danhsachsinhvien" />

        <TextView
            android:id="@+id/text_danhsinhvien"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/images_danhsachsinhvien"
            android:layout_toEndOf="@+id/text_danhsachlop"
            android:background="@drawable/background_text"
            android:padding="20dp"
            android:layout_marginBottom="30dp"
            android:text="DANH SINH VIÊN"
            android:layout_marginTop="-5dp"
            android:textAlignment="center"
            android:textColor="@color/white" />
        <ImageView
            android:layout_below="@+id/text_danhsachlop"
            android:id="@+id/images_themlop"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/background_icon"
            android:padding="20dp"
            android:src="@drawable/icon_themlop" />

        <TextView
            android:id="@+id/text_themlop"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/images_themlop"
            android:background="@drawable/background_text"
            android:padding="20dp"
            android:text="THÊM LỚP HỌC"
            android:layout_marginTop="-5dp"
            android:textAlignment="center"
            android:textColor="@color/white" />
        <ImageView
            android:layout_below="@+id/text_danhsinhvien"
            android:id="@+id/images_themsinhvien"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_toEndOf="@+id/images_danhsachlop"
            android:background="@drawable/background_icon"
            android:padding="20dp"
            android:src="@drawable/icon_themsinhvien" />

        <TextView
            android:id="@+id/text_themsinhvien"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/images_themsinhvien"
            android:layout_toEndOf="@+id/text_danhsachlop"
            android:background="@drawable/background_text"
            android:padding="20dp"
            android:text="THÊM SINH VIÊN"
            android:layout_marginTop="-5dp"
            android:textAlignment="center"
            android:textColor="@color/white" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageView
            android:id="@+id/image_chonvehome"
            android:layout_marginBottom="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/home_select"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/images_chonveseting"
            android:layout_marginBottom="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/settings"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>