<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Themsinhvien_activity"
    android:background="@drawable/background_gradient"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/btn_back_themlop"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/icon_button_back"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THÊM LỚP"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <Spinner
            android:id="@+id/layanh"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:background="@drawable/background_spinner"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:boxStrokeColor="@color/gravity"
            app:hintTextColor="@color/gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/malop"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:hint="Mã lớp"
                android:textCursorDrawable="@drawable/cursor_input_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:boxStrokeColor="@color/gravity"
            app:hintTextColor="@color/gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tenlop"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:hint="Tên lớp"
                android:textCursorDrawable="@drawable/cursor_input_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btn_themlop"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Thêm lớp học"
            android:drawableStart="@drawable/ic_baseline_add_circle_outline_24"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách lớp mới thêm"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="18sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:background="@color/white"/>
    <ListView
        android:id="@+id/them_lvLop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

</LinearLayout>